        <reference name="left">
            <block type="mzax_emarketing/campaign_edit_tabs" name="mzax_emarketing_edit_tabs"></block>
            <block type="adminhtml/template" name="mzax_emarketing.credits" template="mzax/emarketing/campaign/credits-left.phtml"></block>
